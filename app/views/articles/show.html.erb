<div class='w-75 container mt-5'>
  <div class="d-flex">
    <h1><%= @article.title %></h1>
    <%= link_to edit_article_path(@article), class: '' do %>
      <i class="fa-solid fa-pencil"></i>
    <% end %>
    <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: '' do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>
  <hr>
  <%= @article.content %>
</div>
